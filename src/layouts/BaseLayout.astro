---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body class="font-sans bg-white text-gray-800 antialiased">
    <!-- 导航栏 -->
    <header class="border-b border-gray-200 sticky top-0 bg-white/90 backdrop-blur-sm z-10">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold text-blue-600">朱捷登</a>
        <div class="flex gap-6">
          <a href="/" class="hover:text-blue-600">首页</a>
          <a href="/projects" class="hover:text-blue-600">项目</a>
          <a href="/about" class="hover:text-blue-600">关于</a>
          <a href="/contact" class="hover:text-blue-600">联系</a>
        </div>
      </nav>
    </header>

    <!-- 主内容区域 -->
    <main class="container mx-auto px-4 py-8 max-w-5xl">
      <slot />
    </main>

    <!-- 页脚 -->
    <footer class="border-t border-gray-200 py-8 mt-16">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-600">&copy; 2024 朱捷登. 保留所有权利.</p>
        <div class="flex justify-center gap-4 mt-4">
          <a href="https://github.com/GUYUSHU-zjd" class="text-gray-600 hover:text-blue-600" target="_blank">
            GitHub
          </a>
          <a href="mailto:zjd3255768319@163.com" class="text-gray-600 hover:text-blue-600">
            邮箱
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>