---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
---

<BaseLayout title="技术博客 - 数据分析作品集">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-800 mb-4">技术博客</h1>
      <p class="text-lg text-gray-600">分享数据分析技巧、工具使用经验和项目心得</p>
    </div>

    <div class="space-y-8">
      {blogPosts.map((post) => (
        <article class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-md transition-shadow">
          <a href={`/blog/${post.slug}`} class="hover:no-underline">
            <h2 class="text-xl font-semibold text-gray-800 hover:text-blue-600 mb-2">{post.data.title}</h2>
          </a>
          <p class="text-gray-600 mb-4">{post.data.description}</p>
          <div class="flex items-center justify-between text-sm text-gray-500">
            {/* 安全日期渲染 */}
            {(() => {
              const pubDate = post.data.pubDate || post.data.date;
              const date = pubDate ? new Date(pubDate) : null;
              const isValidDate = date && !isNaN(date.getTime());

              return isValidDate ? (
                <time datetime={date.toISOString()}>
                  {date.toLocaleDateString('zh-CN')}
                </time>
              ) : (
                <span class="text-gray-400">日期未设置</span>
              );
            })()}

            <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
              阅读更多
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    {blogPosts.length === 0 && (
      <div class="text-center py-12">
        <div class="text-gray-400 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-700 mb-2">暂无博客文章</h3>
        <p class="text-gray-500">当前没有可展示的博客文章，请稍后再查看。</p>
      </div>
    )}
  </div>
</BaseLayout>