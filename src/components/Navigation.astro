---
// src/components/Navigation.astro
const baseUrl = import.meta.env.BASE_URL;
---

<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href={`${baseUrl}`} class="text-xl font-bold text-gray-800">
      数据分析作品集
    </a>
    
    <div class="flex gap-6">
      <!-- 所有链接使用动态基础路径 -->
      <a href={`${baseUrl}`} class="text-gray-600 hover:text-blue-600">首页</a>
      <a href={`${baseUrl}about/`} class="text-gray-600 hover:text-blue-600">关于</a>
      <a href={`${baseUrl}projects/`} class="text-gray-600 hover:text-blue-600">项目</a>
      <a href={`${baseUrl}blog/`} class="text-gray-600 hover:text-blue-600">博客</a>
    </div>
  </div>
</nav>